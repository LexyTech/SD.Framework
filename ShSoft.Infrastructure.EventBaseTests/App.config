<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <!--依赖注入提供者配置节点-->
    <section name="injectionProviderConfiguration" type="SD.IOC.Core.Configuration.InjectionProviderConfiguration,SD.IOC.Core" />
    <!--依赖注入注册配置节点-->
    <section name="injectionRegisterConfiguration" type="SD.IOC.Core.Configuration.InjectionRegisterConfiguration,SD.IOC.Core" />
  </configSections>

  <connectionStrings>
    <add name="RavenConnection" connectionString="Url=http://192.168.8.211:8080;Database =SlamDunk3;"/>
  </connectionStrings>

  <appSettings>
    <add key="RavenEventConnection" value="RavenConnection"/>
    <add key="EventSourceAssembly" value="ShSoft.Infrastructure.EventBaseTests"/>
  </appSettings>

  <!--依赖注入提供者配置，默认采用Autofac-->
  <injectionProviderConfiguration type="SD.IOC.Core.AutofacProvider.AutofacInstanceResolver" assembly="SD.IOC.Core" />

  <!--依赖注入注册配置-->
  <injectionRegisterConfiguration>
    <!--As接口程序集列表-->
    <asInterfaceAssemblies>
      <assembly name="ShSoft.Infrastructure.EventBaseTests" />
    </asInterfaceAssemblies>

    <!--As接口类型列表-->
    <asInterfaceTypes>
      <type name="ShSoft.Infrastructure.EventStoreProvider.RavenStoreProvider" assembly="ShSoft.Infrastructure.EventStoreProvider.RavenDB" />
    </asInterfaceTypes>
  </injectionRegisterConfiguration>

</configuration>